<h1>Account Management</h1>

<!-- TASK 3 STARTS HERE -->
<h2>Welcome <%= accountData.firstname %></h2>

<!-- Update account information link (ALWAYS visible for all users) -->
<a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>

<!-- ONLY show Inventory Management section if the user is Employee or Admin -->
<% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv">Go to Inventory Management</a></p>
    <p><a href="/favorites">View My Saved Vehicles</a></p>

<% } %>

