<!-- views/inventory/add-inventory.ejs -->
<%- include("../partials/header", { title }) %>

<h1>Add New Inventory Item</h1>

<form method="POST" action="/inventory/add-inventory">

  <label>Make:</label>
  <input type="text" name="inv_make" value="<%= inv_make || '' %>" required>

  <label>Model:</label>
  <input type="text" name="inv_model" value="<%= inv_model || '' %>" required>

  <label>Year:</label>
  <input type="number" name="inv_year" value="<%= inv_year || '' %>" required>

  <label>Description:</label>
  <textarea name="inv_description"><%= inv_description || '' %></textarea>

  <label>Image URL:</label>
  <input type="text" name="inv_image" value="<%= inv_image || '' %>">

  <label>Thumbnail URL:</label>
  <input type="text" name="inv_thumbnail" value="<%= inv_thumbnail || '' %>">

  <label>Price:</label>
  <input type="number" name="inv_price" step="0.01" value="<%= inv_price || '' %>" required>

  <label>Miles:</label>
  <input type="number" name="inv_miles" value="<%= inv_miles || '' %>" required>

  <label>Color:</label>
  <input type="text" name="inv_color" value="<%= inv_color || '' %>" required>

  <label>Classification:</label>
  <select name="classification_id" required>
    <% classificationList.forEach(c => { %>
      <option value="<%= c.id %>" <%= c.selected ? "selected" : "" %>>
        <%= c.name %>
      </option>
    <% }) %>
  </select>

  <% if (errors) { %>
    <div class="errors">
      <% errors.forEach(e => { %>
        <p><%= e.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <button type="submit" class="btn btn-primary">Add Vehicle</button>

</form>

<%- include("../partials/footer") %>
