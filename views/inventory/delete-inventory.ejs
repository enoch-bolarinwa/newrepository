<!-- views/inventory/delete-inventory.ejs -->
<%- include("../partials/header", { title }) %>

<h1>Delete Vehicle</h1>

<p>Are you sure you want to delete this vehicle?</p>

<ul>
  <li><strong>Make:</strong> <%= item.inv_make %></li>
  <li><strong>Model:</strong> <%= item.inv_model %></li>
  <li><strong>Year:</strong> <%= item.inv_year %></li>
</ul>

<form method="POST" action="/inventory/delete">
  <input type="hidden" name="inv_id" value="<%= item.inv_id %>">
  <button type="submit" class="btn btn-danger">Delete</button>
  <a href="/inventory" class="btn btn-secondary">Cancel</a>
</form>

<%- include("../partials/footer") %>
