<!-- views/inventory/add-classification.ejs -->
<%- include("../partials/header", { title }) %>

<h1>Add New Classification</h1>

<form method="POST" action="/inventory/add-classification">
  <label for="classification_name">Classification Name:</label>
  <input type="text" name="classification_name" required>

  <% if (errors) { %>
    <div class="errors">
      <% errors.forEach(e => { %>
        <p><%= e.msg %></p>
      <% }) %>
    </div>
  <% } %>

  <button type="submit" class="btn btn-primary">Add Classification</button>
</form>

<%- include("../partials/footer") %>
