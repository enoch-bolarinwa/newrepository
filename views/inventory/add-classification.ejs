<%- include("../partials/header", { title }) %>

<h1>Add Classification</h1>

<% if (messages.length) { %>
  <p class="notice"><%= messages %></p>
<% } %>

<% if (errors) { %>
  <ul class="errors">
    <% errors.forEach(e => { %>
      <li><%= e.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="POST" id="classificationForm">
  <label for="classification_name">Classification Name:</label>
  <input type="text" id="classification_name" name="classification_name"
         required pattern="^[A-Za-z0-9]+$">
  <button type="submit">Submit</button>
</form>

<script src="/js/classificationValidation.js"></script>

<%- include("../partials/footer") %>
